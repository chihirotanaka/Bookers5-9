<!-- サイドバー USER INFO -->

<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>

<% if @book.errors.any? %>
        <ul>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

    <div class="col-xs-3">

      <h2>User info</h2><br>

      <td><%= attachment_image_tag current_user,
       :profile_image, :fill, 70, 70, format:
       'jpeg', fallback: "no_image.jpg" %></td>

      <table class="table">
      <theat>
      <tbody>
        <tr>
           <th>name</th>
           <td><%= current_user.name %></td>
        </tr>
        <tr>
           <th>introduction</th>
           <td><%= current_user.introduction %></td>
        </tr>
      </tbody>
      </theat>
      </table>
      <!-- 自己紹介編集 -->

        <%= link_to edit_user_path(current_user)  do %>
        <li class= "btn btn-secondary, btn-block btn-lg btn-block">
        <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span></li>
        <% end %>

      <!-- NEW BOOK -->
      <%= form_for(@book) do |f| %>

      <h2>New book</h2>

      <h6>Title</h6>
      <%= f.text_field :title%>

      <h6>Body</h6>
      <%= f.text_area :body%><br>

      <%= f.submit 'Create Book', class: "btn btn_primary" %>
      <% end %>
      <br>

    </div>
<!-- 画像 -->

<!--  右テーブル -->
    <div class="col-xs-9">
      <H2>Books</H2>
      <table class="table">

      <tr>
      <theat>
        <tr>
           <th th colspan="2"></th>
           <th>Title</th>
           <th>Opinion</th>
        </tr>
      </theat>

     <% @books.each do |book|%>
      <tbody>
        <tr>
           <td>
            <%= link_to user_path(book.user.id) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback:
             "no_image.jpg" %>
            <% end %>
           </td>
           <td>
           </td>
           <td><%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
            </td>
            <td><%= book.body %>
            </td>
        </tr>

      </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>