<div class="container">
<div class="row">

  <% if @user.errors.any? %>
    <ul>
      <h4><%= @user.errors.count %> errors prohibited this obj from being saved:</h4>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
　<% end %>

<%= form_for(@user) do |f| %>

  <h2>User info</h2>
  <p>Name</p>
  <%= f.text_field :name, autofocus: true, id:"inputEmail" %>

  <p>Image</p>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

  <br>

  <p>Introduction</p>
  <%= f.text_area :introduction %>

  <br>

  <%= f.submit "Update User" , class: "btn btn-primary btn-lg" %>


<% end %>

</div></div>